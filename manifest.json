// manifest.json
{
  "name": "AlertCrypto Matrix 2025",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Real-time crypto signals with Matrix theme",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "unlimitedStorage",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://s3.tradingview.com/*",
    "https://api.kraken.com/*",
    "https://api.coingecko.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://s3.tradingview.com; object-src 'self'"
  }
}
